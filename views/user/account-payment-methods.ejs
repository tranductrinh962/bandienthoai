<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Phương thức thanh toán</title>
  <link rel="shortcut icon" href="../images/favicon.png" type="image/x-icon">

  <!-- all css -->
  <link rel="stylesheet" href="../css/bootstrap.min.css">
  <link rel="stylesheet" href="../css/jquery-ui.css">
  <link rel="stylesheet" href="../css/slick.css">
  <link rel="stylesheet" href="../css/line-awesome.css">
  <link rel="stylesheet" href="../css/nice-select.css">
  <link rel="stylesheet" href="../css/style.css">
  <link rel="stylesheet" href="../css/responsive.css">
</head>

<body>
 <%- include('../partials/navibar.ejs') %>

  <!-- breadcrumbs -->
  <div class="container">
    <div class="breadcrumbs">
      <a href="/"><i class="las la-home"></i></a>
      <a href="/account">Tài khoản</a>
      <a href="/account/payment-methods" class="active">Phương thức thanh toán</a>
    </div>
  </div>

  <!-- account wrapper -->
  <div class="my_account_wrap section_padding_b">
    <div class="container">
      <div class="row">
        <!--  account sidebar  -->
        <%- include('../partials/accountSide.ejs') %>
        <!-- account content -->
        <div class="col-lg-9">
          <% if (currentUser.creditCard) { %>
          <div class="payment_meth_wrp">
            <div class="single_paymethod d-flex flex-wrap shadow_sm padding_default mt-3">
              <div class="paymeth_img mb-3 mb-md-0">
                <img loading="lazy" src="../images/visa.png" alt="visa">
              </div>
              <div class="single_orderdet w-130px ms-3 me-3">
                <h5>Hình thức</h5>
                <p>Thẻ tín dụng Visa</p>
                <p>Trạng thái: <span class="text-success">Online</span></p>
              </div>
              <div class="single_orderdet ms-sm-auto ms-0 me-3">
                <h5>4 số cuối </h5>
                <p><%=currentUser.creditCard.cardNumber%></p>
              </div>
              <div class="single_orderdet ms-auto me-3">
                <h5>Hết hạn</h5>
                <p><%=currentUser.creditCard.expirationMonth%>/<%=currentUser.creditCard.expirationYear.toString().slice(-2)%></p>
              </div>
              <form action="/account/delete-payment-method" method="POST">
                <div class="orderdet_btn ms-auto me-3 ">
                  <button class="btn btn-danger second rounded text-capitalize xs_btn me-2">Xóa</button>
                  <!--<a href="#" class="default_btn second rounded text-capitalize xs_btn">Delete</a> -->
                </div>
              </form>
            </div>
          </div>
          <% } else { %>

          <div class="payment_meth_wrp">
            <div class="single_paymethod d-flex flex-wrap justify-content-center shadow_sm padding_default mt-3">

              <div class="orderdet_btn ">
                <a href="/account/create-payment-method" class="default_btn second rounded text-capitalize xs_btn me-2">Cài đặt hình thức thanh toán</a>
                <!--<a href="#" class="default_btn second rounded text-capitalize xs_btn">Delete</a> -->
              </div>
            </div>
          </div>
          <% } %>


        </div>

      </div>
    </div>
  </div>
<%- include('../partials/footer.ejs') %>


  <!-- all js -->
<script src="../js/jquery-3.5.1.min.js"></script>
  <script src="../js/jquery-ui.min.js"></script>
  <script src="../js/slick.min.js"></script>
  <script src="../js/jquery.nice-select.min.js"></script>
  <script src="../js/app.js"></script>
  <script src="../js/cart.js"></script>
</body>



</html>