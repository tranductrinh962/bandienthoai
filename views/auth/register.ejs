<!DOCTYPE html>
<html lang="en">



<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đăng kí</title>

  <!-- all css -->
  <link rel="stylesheet" href="../css/bootstrap.min.css">
  <link rel="stylesheet" href="../css/jquery-ui.css">
  <link rel="stylesheet" href="../css/slick.css">
  <link rel="stylesheet" href="../css/line-awesome.css">
  <link rel="stylesheet" href="../css/nice-select.css">
  <link rel="stylesheet" href="../css/style.css">
  <link rel="stylesheet" href="../css/responsive.css">
</head>

<body>

  <%- include('../partials/navibar.ejs') %>

  <!-- breadcrumbs -->
  <div class="container">
    <div class="breadcrumbs">
      <a href="/"><i class="las la-home"></i></a>
      <a href="/register" class="active">Tạo tài khoản</a>
    </div>
  </div>


  <!--register wrapper-->
  <div class="register_wrap section_padding_b">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-5 col-lg-7 col-md-9">
          <div class="register_form padding_default shadow_sm">
            <h4 class="title_2">Tạo tài khoản</h4>
            <p class="mb-4 text_md">Đăng kí để được mua hàng ngay</p>
            <form action="/register" method="POST">
              <div class="row">
                <div class="col-12">
                  <div class="single_billing_inp">
                    <label for="username">Tên người dùng <span>*</span></label>
                    <input type="text" id="username" name="username" maxlength="20" minlength="5" oninput="validateInput(event)" required placeholder="nhập tối thiểu 5 kí tự (Không kí tự đặc biệt)">
                    <% if (alreadyExistUser){%>
                    <p class="error-list text-danger"><%=alreadyExistUser%></p>
                    <%}%>

                <% if (typeof errors !=='undefined' && errors.length > 0) { %>
                    <ul class="error-list">
                      <% errors.forEach(error => { %>
                      <% if (error.path === "username") {%>
                      <li class="text-danger"><%= error.msg %></li>
                      <% } %>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                  <div class="single_billing_inp">
                    <label for="firstName">Tên đầu <span>*</span></label>
                    <input type="text" placeholder="Trường" id="firstName" maxlength="20" oninput="validateName(event)" name="firstName" required>
                    <% if (typeof errors !=='undefined' && errors.length > 0) { %>
                    <ul class="error-list">
                      <% errors.forEach(error => { %>
                      <% if (error.path === "firstName") {%>
                      <li class="text-danger"><%= error.msg %></li>
                      <% } %>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                  <div class="single_billing_inp">
                    <label for="lastName">Tên họ đệm <span>*</span></label>
                    <input type="text" placeholder="Phạm Đức" id="lastName" name="lastName" maxlength="40" oninput="validateLastName(event)" required>
                    <% if (typeof errors !=='undefined' && errors.length > 0) { %>
                    <ul class="error-list">
                      <% errors.forEach(error => { %>
                      <% if (error.path === "lastName") {%>
                      <li class="text-danger"><%= error.msg %></li>
                      <% } %>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="single_billing_inp">
                    <label for="email">Địa chỉ email <span>*</span></label>
                    <input type="email" name="email" maxlength="40" placeholder="example@mail.com">
                    <% if (alreadyExistEmail){%>
                    <p class="error-list text-danger"><%=alreadyExistEmail%></p>
                    <%}%>

                    <% if (typeof errors !=='undefined' && errors.length > 0) { %>
                    <ul class="error-list">
                      <% errors.forEach(error => { %>
                      <% if (error.path === "email") {%>
                      <li class="text-danger"><%= error.msg %></li>
                      <% } %>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="single_billing_inp">
                    <label for="phoneNumber">Số điện thoại <span>*</span></label>
                    <input type="number" name="phoneNumber" maxlength="11" minlength="7" placeholder="01234567899" id="phoneNumber" name="phoneNumber" oninput="validatePhone(event)" required>
                    <% if (typeof errors !=='undefined' && errors.length > 0) { %>
                    <ul class="error-list">
                      <% errors.forEach(error => { %>
                      <% if (error.path === "phoneNumber") {%>
                      <li class="text-danger"><%= error.msg %></li>
                      <% } %>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="single_billing_inp">
                    <label for="password">Mật khẩu <span>*</span></label>
                    <input type="password" placeholder="Nhập tại đây" id="password" minlength="8" name="password" required>
                    <% if (typeof errors !=='undefined' && errors.length > 0) { %>
                    <ul class="error-list">
                      <% errors.forEach(error => { %>
                      <% if (error.path === "password") {%>
                      <li class="text-danger"><%= error.msg %></li>
                      <% } %>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="single_billing_inp">
                    <label for="confirmPassword">Xác nhận mật khẩu <span>*</span></label>
                    <input type="password" placeholder="Xác nhận mật khẩu" id="confirmPassword" minlength="8" name="confirmPassword" required>
                    <% if (typeof errors !=='undefined' && errors.length > 0) { %>
                    <ul class="error-list">
                      <% errors.forEach(error => { %>
                      <% if (error.path === "confirmPassword") {%>
                      <li class="text-danger"><%= error.msg %></li>
                      <% } %>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                </div>

                <div class="col-12 mt-3">
                  <button type="submit" class="default_btn xs_btn rounded px-4 d-block w-100">Tạo tài khoản</button>
                </div>

              </div>
            </form>

            <!-- <div class="dif_regway my-3">
                            <span class="txt">Or singup in with</span>
                        </div>

                        <div class="d-flex">
                            <button class="default_btn xs_btn rounded px-4 d-block w-50 text-capitalize bg-facebook">
                                <i class="fab fa-facebook-f me-2"></i> Facebook
                            </button>
                            <button class="default_btn xs_btn rounded px-4 d-block w-50 ms-3 text-capitalize bg-google">
                                <i class="fab fa-google me-2"></i> Google
                            </button>
                        </div> -->

            <p class="text-center mt-3 mb-0">Đã có tài khoản ? <a href="/login" class="text-color">Đăng nhập ngay</a></p>

          </div>
        </div>
      </div>
    </div>
  </div>


  <%- include('../partials/footer.ejs') %>
  <!-- all js -->
  <script src="../js/bootstrap.bundle.min.js"></script>
  <script src="../js/jquery-3.5.1.min.js"></script>
  <script src="../js/jquery-ui.min.js"></script>
  <script src="../js/slick.min.js"></script>
  <script src="../js/jquery.nice-select.min.js"></script>
  <script src="../js/app.js"></script>
  <script>
    function validateInput(event) {
      event.target.value = event.target.value.replace(/[^a-zA-Z0-9 ]/g, '');
    }

    function validateName(event) {
      event.target.value = event.target.value.replace(/[^a-zA-ZÀ-ỹ]/g, '');
    }

    function validatePhone(event) {
      event.target.value = event.target.value.replace(/[^0-9]/g, '');
    }

    function validateLastName(event) {
      event.target.value = event.target.value.replace(/[^a-zA-ZÀ-ỹ0-9 ]/g, '');
    }
  </script>
</body>



</html>